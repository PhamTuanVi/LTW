@using System.Web
@using LTW.Models
@{
    var hoTen = Session["ten"] as string;
    var role = Session["rolename"] as string;
    var danhMucData = new DanhMucData();
    var dsDanhMuc = danhMucData.dsDanhMuc;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DIZYPhone</title>



    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/cusstomlayout.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/header_user.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/cusstomlayout.css?v=@DateTime.Now.Ticks")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/header_user.css?v=@DateTime.Now.Ticks")" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body data-theme="dark">

   
    <header class="header-top">
        <div class="header-container">
            <a href="@Url.Action("Index", "Home")" class="logo">
                <span>Đồ án nhóm 7</span>
            </a>

            <div class="search-box">
                <form action="@Url.Action("Search","Home")" method="post">
                    <input type="text" name="keyword" placeholder="Tìm kiếm sản phẩm..." />
                    <button class="search-btn" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>

            <div class="header-actions">
               
                <button class="icon-btn" id="themeToggle" title="Chuyển giao diện">
                    <i class="fas fa-moon"></i>
                </button>

              
                <div class="user-avatar-container">
                    <div class="user-avatar" id="user-avatar-toggle" title="Tài khoản" style="cursor: pointer;">
                        <i class="fas fa-user"></i>
                    </div>

                    <div class="user-menu" id="user-menu">
                        @if (string.IsNullOrEmpty(hoTen))
                        {
                            <div class="empty-state">
                                <i class="fas fa-user-circle"></i>
                                <p>Đăng nhập để trải nghiệm đầy đủ tính năng</p>
                            </div>
                            <div class="user-menu-divider"></div>
                            <a href="@Url.Action("DangNhap","TaiKhoan")"><i class="fas fa-sign-in-alt"></i> Đăng nhập</a>
                            <a href="@Url.Action("DangKy","TaiKhoan")"><i class="fas fa-user-plus"></i> Đăng ký</a>
                        }
                        else
                        {
                            if (role == "Admin")
                            {
                                <div class="user-menu-info">
                                    <div class="user-menu-name">Admin: @hoTen</div>
                                </div>
                                <div class="user-menu-divider"></div>
                                <a href="@Url.Action("Index", "Home", new { area = "Admin" })">
                                    <i class="fas fa-tachometer-alt"></i> Trang quản trị
                                </a>

                                <a href="@Url.Action("Logout", "TaiKhoan", new { area = "Admin" })">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            }
                            else
                            {
                                <div class="user-menu-info">
                                    <div class="user-menu-name">@hoTen</div>
                                </div>
                                <div class="user-menu-divider"></div>
                                <a href="@Url.Action("ThongTin","TaiKhoan")"><i class="fas fa-user-circle"></i> Hồ sơ cá nhân</a>
                                <a href="@Url.Action("Logout","TaiKhoan")"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                            }
                        }
                    </div>
                </div>
                <!--giỏ hàng-->

                <div class="cart-container">
                    <button class="icon-btn" id="cart-toggle" title="Giỏ hàng">
                        <i class="fas fa-shopping-cart"></i>
                     
                    </button>

                    <div class="cart-menu" id="cart-menu">
                        @if (string.IsNullOrEmpty(hoTen))
                        {
                            <div class="empty-state">
                                <i class="fas fa-shopping-cart"></i>
                                <p>Đăng nhập để xem giỏ hàng và thanh toán</p>
                                <div class="empty-state-actions">
                                    <a href="@Url.Action("DangNhap","TaiKhoan")" class="btn-primary">
                                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                    </a>
                                    <a href="@Url.Action("DangKy","TaiKhoan")" class="btn-secondary">
                                        <i class="fas fa-user-plus"></i> Đăng ký
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            @*@Html.Action("MiniCart", "GioHang")*@
                        }

                    </div>
                </div>

            </div>

           
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </header>

 
    <nav class="header-nav">
        <div class="nav-container">
            <div class="nav-menu" id="navMenu">

                <a href="@Url.Action("Index","Home")" class="nav-link">
                    <i class="fas fa-home"></i> <span>Trang chủ</span>
                </a>
                <div class="dropdown">
                    <button class="nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-list"></i> <span>Danh mục</span>
                    </button>
                    <ul class="dropdown-menu">
                        @if (dsDanhMuc != null && dsDanhMuc.Count > 0)
                        {
                            foreach (var dm in dsDanhMuc)
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("LocTheoDanhMuc", "Home", new { id = dm.DanhMucID })">
                                        @dm.TenDanhMuc
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li><span class="dropdown-item text-muted">Không có danh mục</span></li>
                        }
                    </ul>
                </div>
                <a href="@Url.Action("NoiBat","SanPham")" class="nav-link">
                    <i class="fas fa-fire"></i> <span>Sản phẩm nổi bật</span>
                </a>

                <a href="@Url.Action("BestSeller","SanPham")" class="nav-link">
                    <i class="fas fa-crown"></i> <span>Best Seller</span>
                </a>

                <a href="@Url.Action("KhuyenMai","SanPham")" class="nav-link">
                    <i class="fas fa-tag"></i> <span>Khuyến mãi</span>
                </a>

                <a href="@Url.Action("Index","LienHe")" class="nav-link">
                    <i class="fas fa-envelope"></i> <span>Liên hệ</span>
                </a>

            </div>
        </div>
    </nav>

    <div class="mobile-overlay" id="mobileOverlay"></div>


    <main class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Scripts/cusstom/header_user.js")"></script>
    <script src="@Url.Content("~/Scripts/cusstom/lauyout.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
