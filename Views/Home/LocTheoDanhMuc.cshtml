@model List<LTW.Models.SanPham>
@{
    ViewBag.Title = "LocTheoDanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4 mb-5">
    <h2 class="text-primary mb-4 text-center">
        <i class="fas fa-tags"></i> Sản phẩm trong danh mục
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="row g-3">
            @foreach (var sp in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card h-100 product-card shadow-sm">
                        <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.SanPhamID })">
                            <img src="@Url.Content("~/Content/images/" + sp.HinhAnh1)"
                                 class="card-img-top" alt="@sp.TenSanPham" />
                        </a>
                        <div class="card-body text-center">
                            <h6 class="card-title text-truncate">@sp.TenSanPham</h6>
                            <p class="text-danger fw-bold mb-1">@string.Format("{0:N0}₫", sp.Gia)</p>
                            <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.SanPhamID })"
                               class="btn btn-sm btn-outline-primary">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            <i class="fas fa-info-circle"></i> Hiện chưa có sản phẩm nào trong danh mục này.
        </div>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại trang chủ
        </a>
    </div>
</div>

@section Styles {
    <style>
        .product-card {
            border-radius: 12px;
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 16px rgba(0,0,0,0.15);
            }

            .product-card img {
                height: 200px;
                object-fit: contain;
                background-color: #f9f9f9;
            }

        .card-title {
            font-size: 0.95rem;
            min-height: 38px;
        }
    </style>
}