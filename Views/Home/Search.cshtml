@model IEnumerable<LTW.Models.SanPham>
@using System.Data.SqlClient
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="@Url.Content("~/Content/css/product_card.css?v=" + DateTime.Now.Ticks)" rel="stylesheet" />


}
<h3>Kết quả tìm kiếm</h3>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var sp in Model)
        {
            decimal trungBinhSao = 0;
            using (var con = LTW.Models.DBConnect.GetConnection())
            {
                con.Open();
                using (var cmd = new SqlCommand("SELECT dbo.fn_TrungBinhRatting(@SanPhamID)", con))
                {
                    cmd.Parameters.AddWithValue("@SanPhamID", sp.SanPhamID);
                    trungBinhSao = Convert.ToDecimal(cmd.ExecuteScalar());
                }
            }
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="product-card">
                    <div class="product-card-img">
                        <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.SanPhamID })">
                            <img src="@Url.Content("~/Content/images/" + sp.HinhAnh1)" alt="@sp.TenSanPham" class="card-img-top">
                        </a>
                    </div>
                    <div class="product-card-body">
                        <h5 class="product-title">
                            <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.SanPhamID })" title="@sp.TenSanPham">@sp.TenSanPham</a>
                        </h5>
                        <div class="product-price">
                            <span class="new-price">@string.Format("{0:N0}đ", sp.Gia)</span>
                        </div>
                        <div class="d-flex align-items-center mt-1">
                            <div class="text-warning me-2">
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="small text-dark">
                                @trungBinhSao
                            </div>
                        </div>
                    </div>
                    <div class="product-card-footer">
                        <form action="@Url.Action("ThemVaoGio", "GioHang")" method="post" style="display:inline;">
                            <input type="hidden" name="sanPhamId" value="@sp.SanPhamID" />
                            <input type="hidden" name="soLuong" value="1" />
                            <button type="submit" class="btn btn-primary btn-add-to-cart">
                                <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                            </button>
                        </form>
                        <a href="@Url.Action("ChiTiet", "SanPham", new { id = sp.SanPhamID })" class="btn btn-outline-secondary btn-view-details">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center mt-3">
        <i class="fas fa-info-circle"></i> Không tìm thấy sản phẩm nào 
    </div>
}
