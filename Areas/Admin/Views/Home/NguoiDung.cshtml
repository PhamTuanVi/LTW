@model IEnumerable<LTW.Models.TaiKhoan>
@{
    ViewBag.Title = "NguoiDung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="mb-3 text-primary">
    👥 Danh sách người dùng
</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light text-center">
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Ảnh đại diện</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td class="text-center">@u.TaiKhoanID</td>
                    <td>@u.TenDangNhap</td>
                    <td>@u.HoTen</td>
                    <td>@u.Email</td>
                    <td>@u.SoDienThoai</td>
                    <td>@u.DiaChi</td>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(u.Avatar))
                        {
                            <img src="@Url.Content("~/Content/avatars/" + u.Avatar)"
                                 alt="Avatar"
                                 style="width:50px; height:50px; border-radius:50%; object-fit:cover;" />
                        }
                        else
                        {
                            <span class="text-muted">Không có</span>
                        }
                    </td>
                    <td class="text-center">
                        <form action="@Url.Action("XoaNguoiDung", "Home", new { area = "Admin" })" method="post" style="display:inline;">
                           
                            <input type="hidden" name="id" value="@u.TaiKhoanID" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Bạn có chắc muốn xóa tài khoản này không?');">
                                <i class="fa fa-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center mt-3">
        <i class="fas fa-info-circle"></i> Không có người dùng nào.
    </div>
}


