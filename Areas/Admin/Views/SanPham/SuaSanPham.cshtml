@model LTW.Models.SanPham
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ch = ViewBag.CauHinh as LTW.Models.ChiTietCauHinh ?? new LTW.Models.ChiTietCauHinh();
}

<style>
    .form-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        padding: 30px;
        transition: all 0.3s ease;
    }

        .form-card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control {
        border-radius: 10px;
        box-shadow: none !important;
        border: 1px solid #ccc;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0,123,255,0.15);
        }

    h2 {
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .config-section {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        margin-top: 20px;
    }

    .btn {
        border-radius: 8px;
        font-weight: 500;
    }

    .product-img {
        width: 180px;
        height: 180px;
        object-fit: contain;
        border-radius: 10px;
        border: 1px solid #ddd;
        background: #fff;
        transition: transform 0.2s;
    }

        .product-img:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-5 mb-5">
    <div class="form-card">
        <h2 class="text-center text-primary mb-4">✏️ Cập nhật sản phẩm</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="SuaSanPham" asp-controller="SanPham" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.SanPhamID)

            <div class="row">
                <!-- Cột trái -->
                <div class="col-md-6 border-end">
                    <div class="mb-3">
                        <label class="form-label">Tên sản phẩm</label>
                        @Html.TextBoxFor(m => m.TenSanPham, new { @class = "form-control", required = "required" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Thương hiệu</label>
                        @Html.TextBoxFor(m => m.ThuongHieu, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 4 })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá (VNĐ)</label>
                            @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", step = "0.01" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Số lượng</label>
                            @Html.TextBoxFor(m => m.SoLuong, new { @class = "form-control", type = "number" })
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Danh mục sản phẩm</label>
                        <select name="DanhMucID" class="form-control" required>
                            <option value="">-- Chọn danh mục --</option>
                            @if (ViewBag.DanhMucList != null)
                            {
                                foreach (var dm in ViewBag.DanhMucList)
                                {
                                    <option value="@dm.Value" @(dm.Selected ? "selected" : "")>@dm.Text</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                

                <!-- Cột phải -->
                <div class="col-md-6">
                    <div class="text-center mb-3">
                        <label class="form-label d-block">Ảnh hiện tại</label>
                        @if (!string.IsNullOrEmpty(Model.HinhAnh1))
                        {
                            <img src="~/Content/Images/@Model.HinhAnh1" alt="Ảnh hiện tại" class="product-img" />
                        }
                        else
                        {
                            <p class="text-muted fst-italic">Chưa có ảnh</p>
                        }
                        @Html.HiddenFor(m => m.HinhAnh1)
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Chọn ảnh mới (nếu muốn thay)</label>
                        <input type="file" name="fileAnh" class="form-control" />
                    </div>

                    <div class="config-section">
                        <h5 class="text-primary mb-3">⚙️ Cấu hình sản phẩm</h5>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Màn hình</label>
                                <input name="ManHinh" value="@ch.ManHinh" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Chip xử lý</label>
                                <input name="ChipXuLy" value="@ch.ChipXuLy" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">RAM</label>
                                <input name="RAM" value="@ch.RAM" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Bộ nhớ trong</label>
                                <input name="BoNhoTrong" value="@ch.BoNhoTrong" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Pin</label>
                                <input name="Pin" value="@ch.Pin" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Hệ điều hành</label>
                                <input name="HeDieuHanh" value="@ch.HeDieuHanh" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4 py-2 me-2 shadow-sm">💾 Lưu thay đổi</button>
                <a href="@Url.Action("Index", "SanPham")" class="btn btn-secondary px-4 py-2 shadow-sm">⬅ Quay lại</a>
            </div>
        </form>
    </div>
</div>
